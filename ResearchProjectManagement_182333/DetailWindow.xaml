<Window x:Class="ResearchProjectManagement_182333.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResearchProjectManagement_182333"
        mc:Ignorable="d"
        Title="DetailWindow" Height="500" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Label x:Name="Label" Content="Create/Update" HorizontalAlignment="Left" Height="100" Margin="30,40,0,0" VerticalAlignment="Top" Width="800" FontWeight="ExtraBold" FontSize="50"/>

        <!--Field labels-->
        <Label Content="ProjectId" HorizontalAlignment="Left" Margin="50,150,0,0" VerticalAlignment="Top"/>
        <Label Content="ProjectTitle" HorizontalAlignment="Left" Margin="50,190,0,0" VerticalAlignment="Top"/>
        <Label Content="ResearchField" HorizontalAlignment="Left" Margin="50,230,0,0" VerticalAlignment="Top"/>
        <Label Content="StartDate" HorizontalAlignment="Left" Margin="50,270,0,0" VerticalAlignment="Top"/>
        <Label Content="EndDate" HorizontalAlignment="Left" Margin="50,310,0,0" VerticalAlignment="Top"/>
        <Label Content="LeadResearcher" HorizontalAlignment="Left" Margin="50,350,0,0" VerticalAlignment="Top"/>
        <Label Content="Budget" HorizontalAlignment="Left" Margin="50,390,0,0" VerticalAlignment="Top"/>

        <!--Input fields-->
        <TextBox x:Name="ProjectId" HorizontalAlignment="Left" Height="30" Margin="200,150,0,0" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="ProjectTitle" HorizontalAlignment="Left" Height="30" Margin="200,190,0,0" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="ResearchField" HorizontalAlignment="Left" Height="30" Margin="200,230,0,0" VerticalAlignment="Top" Width="200"/>
        <DatePicker x:Name="StartDate" HorizontalAlignment="Left" Height="30" Margin="200,270,0,0" VerticalAlignment="Top" Width="200"/>
        <DatePicker x:Name="EndDate" HorizontalAlignment="Left" Height="30" Margin="200,310,0,0" VerticalAlignment="Top" Width="200"/>
        <ComboBox x:Name="LeadResearcher" HorizontalAlignment="Left" Height="30" Margin="200,350,0,0" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="Budget" HorizontalAlignment="Left" Height="30" Margin="200,390,0,0" VerticalAlignment="Top" Width="200"/>

        <!--Action buttons-->
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" Height="30" Margin="600,150,0,0" VerticalAlignment="Top" Width="100" Click="SaveButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Height="30" Margin="600,190,0,0" VerticalAlignment="Top" Width="100" Click="CancelButton_Click"/>

    </Grid>
</Window>
